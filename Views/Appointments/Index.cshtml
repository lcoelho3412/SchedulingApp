@model SchedulingApp.Models.WeeklyAgendaViewModel
<a asp-action="Create">Create New Appointment</a>

<h2>Weekly Agenda</h2>
<h4>@Model.WeekStart.ToString("MMMM yyyy")</h4>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Time</th>
            @foreach (var day in Model.Days)
            {
                <th>
                    @day.DayOfWeek<br />
                    @day.ToString("MM/dd")
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var hour in Model.Hours)
        {
            <tr>
                <td>@DateTime.Today.AddHours(hour).ToString("h tt")</td>

                @foreach (var day in Model.Days)
                {
                    var appointment = Model.Appointments.FirstOrDefault(a =>
                        a.Date.Date == day.Date &&
                        a.Date.Hour == hour
                    );

                    <td>
                        @if (appointment != null)
                        {
                            <strong>@appointment.Title</strong><br />
                            @appointment.ClientName
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>